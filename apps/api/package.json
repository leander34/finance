    "@fastify/swagger-ui": "^4.0.0",
    "@prisma/client": "^5.16.2",
    "@saas/core": "workspace:*",
    "@sentry/cli": "^2.32.2",
    "@sentry/node": "^8.18.0",
    "@sentry/profiling-node": "^8.18.0",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cron": "^3.1.7",
    "dayjs": "^1.11.11",
    "dinero.js": "^1.9.1",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "fastify-raw-body": "^4.3.0",
    "fastify-type-provider-zod": "^2.0.0",
    "mobile-detect": "^1.4.5",
    "stripe": "^16.5.0",
    "tsx": "^4.16.2",
    "twilio": "^5.3.0",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
